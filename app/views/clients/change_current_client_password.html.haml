.container
  .pull-left
    %h4 Change Your Password
    .box
      = form_for @user, :url => update_current_client_password_path, :html => { :method => :post } do |f|
        = hidden_field_tag 'id', @user.id
        -flash.each do |name, msg|
          %div.pull-left
            %ul
              %li.error_msg
                = link_to '', '', class: "close", :data => {"dismiss" => "alert"}
                %p= msg
        %div
          = f.label :email, "Email", class: "pull-left"
          = f.email_field :email, readonly: "true"
        %div
          = f.label :password, "New password", class: "pull-left"
          = f.password_field :password, :autofocus => true
        %div
          = f.label :password_confirmation, "Confirm Password", class: "pull-left"
          = f.password_field :password_confirmation
        %div.pull-left
          = f.submit "Update", class: "btn btn-primary"
          = link_to "Cancel", client_dashboard_path, class: "btn btn-primary"