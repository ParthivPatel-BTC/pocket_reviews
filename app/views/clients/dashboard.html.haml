.center.hero-uni
  .container
    %h1.form-signin-heading Dashboard
    = form_for @client,:url => review_invitation_path do |u|
      .span10offset1
        .span12
          %h3.text-center
            = @client.business_name.capitalize
          .control-group
            .controls
              = text_field_tag 'review_invitation[phone_number]', nil, autofocus:  "true",placeholder: "Customer phone number"
              = hidden_field_tag 'review_invitation_client_id', @client.id
          .control-group
            .controls
              = submit_tag "Send", class: "btn btn-primary sendReviewInvitationBtn"