.container
  %h4.pull-left Change Your Password
  .span10offset1
    = form_for @edit_password, :url => update_password_users_path, :html => { :method => :post } do |f|
      = hidden_field_tag 'id', @edit_password.id
      -flash.each do |name, msg|
        %div.pull-left
          %ul
            %li.error_msg
              = link_to '', '', class: "close", :data => {"dismiss" => "alert"}
              %p= msg
      %div
        = f.label :email, "Email", class: "pull-left"
        = f.email_field :email, readonly: "true"
      %div
        = f.label :password, "New password", class: "pull-left"
        = f.password_field :password, :autofocus => true
      %div
        = f.label :password_confirmation, "Confirm Password", class: "pull-left"
        = f.password_field :password_confirmation
      %div
        = f.submit "Update", class: "btn btn-large btn-primary pull-left"
        = link_to "Cancel", root_path, class: "btn btn-large btn-primary"