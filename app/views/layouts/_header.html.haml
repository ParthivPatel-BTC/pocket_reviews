.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container
      = button_tag(type: 'button', class: 'btn btn-navbar') do
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Pocket Review", nil, class: "brand", id: "logo"
      - if is_current_user?
        .nav-collapse.collapse.navbar-inverse-collapse
          %ul.nav.pull-right
            - if is_user?
              %li
                = link_to("Change Password", reset_password_admins_path)
              %li
                = link_to("Logout", destroy_user_session_path, :method => :delete)
            - else
              %form.nav.pull-right
                %li
                  = link_to("Manage Clients", manage_clients_path)
                %li
                  = link_to("Change Password", reset_password_admins_path)
                %li
                  = link_to("Logout", destroy_user_session_path, :method => :delete)