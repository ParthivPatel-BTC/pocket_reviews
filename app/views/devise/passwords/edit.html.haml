.container.pull-left
  .center.hero-uni
    %h4 Change Your Password
    .offset3.span6.box
      = form_for @user, :url => update_password_users_path, :html => { :method => :post } do |f|
        = hidden_field_tag 'id', client.id
        -flash.each do |name, msg|
          %div.pull-left
            %ul
              %li.error_msg
                = link_to '', '', class: "close", :data => {"dismiss" => "alert"}
                %p= msg
        %div
          = f.label :email, "Email", class: "pull-left"
          = f.email_field :email, readonly: "true"
        %div
          = f.label :password, "New password", class: "pull-left"
          = f.password_field :password, :autofocus => true
        %div
          = f.label :password_confirmation, "Confirm Password", class: "pull-left"
          = f.password_field :password_confirmation
        %div.pull-left
          = f.submit "Update", class: "btn btn-primary"
          = link_to "Cancel", manage_passwords_admins_path, class: "btn btn-primary"